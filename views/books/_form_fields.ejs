<div>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%=book.title %>">
</div>

<div>
    <label for="title">Author</label>
    <select name="author">
        <% authors.forEach(author => { %>
            <% if (author.id === book.author) { %>
                <option selected label="<%= author.name %>" value="<%= author.id %>">
            <% } else { %>
                <option label="<%= author.name %>" value="<%= author.id %>">
                            
            <% } %>
        <% }) %>
    </select>
</div>

<div>
<label for="publish-date">Publish Date</label>
<input type="date" name="publishDate" id="publish-date" 
        value="<%=book.publishDate == null ? "" : 
        book.publishDate.toISOString().split("T")[0] %>">
</div>

<div>
    <label for="page-count">Page Count</label>
    <input type="number" name="pageCount" min="1" id="page-count" 
            value="<%=book.pageCount %>">
</div>

<div>
    <label>Cover</label>
    <input type="file" name="cover" class="filepond">
</div>

<div>
    <label for="description">Description</label>
    <textarea name="description" id="description"><%= book.description %></textarea>
</div>